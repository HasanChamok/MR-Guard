@model IEnumerable<Final_mrGuard.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Customers</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.C_ID)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.C_Email)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.C_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.C_Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.C_ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.C_Email)
    </td>

    <td>
        @Html.DisplayFor(modelItem => item.C_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.C_Phone)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.C_Address)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.C_ID }) |
        @Html.ActionLink("Details", "Details", new { id = item.C_ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.C_ID })
    </td>
</tr>
}

</table>

@model Final_mrGuard.Models.Customer

@{
    ViewBag.Title = "Signup";
    var msg = ViewBag.errorMsg;
}

<h2 align="center">Sign Up Here</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" align="center">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="padding: 5px; margin-left:155px  ">

            <div class="col-md-10">
                @Html.EditorFor(model => model.C_Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Email" } })
                @Html.ValidationMessageFor(model => model.C_Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="padding: 5px; margin-left:155px  ">

            <div class="col-md-10">
                @Html.EditorFor(model => model.C_Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Password" } })
                @Html.ValidationMessageFor(model => model.C_Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="padding: 5px; margin-left:155px  ">

            <div class="col-md-10">
                @Html.EditorFor(model => model.C_Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Name" } })
                @Html.ValidationMessageFor(model => model.C_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="padding: 5px; margin-left:155px  ">

            <div class="col-md-10">
                @Html.EditorFor(model => model.C_Phone, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Phone Number" } })
                @Html.ValidationMessageFor(model => model.C_Phone, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="padding: 5px; margin-left:155px  ">

            <div class="col-md-10">
                @Html.EditorFor(model => model.C_Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Address" } })
                @Html.ValidationMessageFor(model => model.C_Address, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" style="">
            <div class=" col-md-12">
                <input type="submit" value="Sign Up" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@if (msg != null)
{
    <p class="text-danger">@msg</p>
}


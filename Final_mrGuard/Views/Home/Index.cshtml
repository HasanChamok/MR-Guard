@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron" style="text-align:center">

    <img id="img_logo" alt="Logo" width="300" height="300" src="@Url.Content("~/Content/mrGuard.png")" />
    <p class="lead" style="margin-top:15px; font-size:30px">Don’t be safety blinded. Be safety minded.</p>

</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-bottom:70px">
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/image/mask.jpg" alt="" style="height: 200px; margin-left:450px">
        </div>

        <div class="item">
            <img src="~/Content/image/hand-gloves.png" alt="" style="height: 200px; margin-left: 450px">
        </div>

        <div class="item">
            <img src="~/Content/image/Master.jpg" alt="" style="height: 200px; margin-left: 450px">
        </div>
        <div class="item">
            <img src="~/Content/image/safety-helmets.jpg" alt="" style="height: 200px; margin-left: 450px">
        </div>
        <div class="item">
            <img src="~/Content/image/safety_shoes.png" alt="" style="height: 200px; margin-left: 450px">
        </div>


    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


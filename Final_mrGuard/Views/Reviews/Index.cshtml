@model IEnumerable<Final_mrGuard.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Reviews</h2>

<h4 style="text-align:center">
    @Html.ActionLink("Create New", "Create")
</h4>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rating)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.C_Email)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Product.Product_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Comment)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Rating)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Customer.C_Email)
    </td>

    <td>

        @Html.ActionLink("Details", "Details", new { id = item.R_ID })

    </td>
</tr>
}

</table>

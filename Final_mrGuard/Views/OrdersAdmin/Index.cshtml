@model IEnumerable<Final_mrGuard.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2 style="text-align:center">Orders</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.Product_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.O_Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Payment_Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order_Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.C_Email)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Product.Product_Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Price)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.O_Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Payment_Type)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Order_Quantity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Customer.C_Email)
    </td>

    <td>

        @Html.ActionLink("Details", "Details", new { id = item.Order_ID }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Order_ID })
    </td>
</tr>
}

</table>
